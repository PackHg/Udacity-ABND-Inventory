<resources>
    <!-- Common margin value used throughout the app -->
    <dimen name="activity_margin">16dp</dimen>

    <!-- Height of each list item (initially 88dp) -->
    <dimen name="list_item_height">@dimen/list_item_image_height</dimen>

    <!-- Width and height of the image in a list item -->
    <dimen name="list_item_image_width">110dp</dimen>
    <dimen name="list_item_image_height">110dp</dimen>

    <!-- Width and height of the image in Editor -->
    <dimen name="editor_image_width">@dimen/list_item_image_width</dimen>
    <dimen name="editor_image_height">@dimen/list_item_image_height</dimen>

</resources>

