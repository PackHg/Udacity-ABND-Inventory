<?xml version="1.0" encoding="utf-8"?>

<!-- Options menu for the EditorActivity -->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EditorActivity">

    <item
        android:id="@+id/editor_action_save"
        android:icon="@drawable/ic_done"
        android:title="@string/editor_action_save"
        app:showAsAction="always" />

    <item
        android:id="@+id/editor_menu_action_take_photo"
        android:icon="@drawable/ic_add_a_photo_white"
        android:title="Take a photo"
        app:showAsAction="ifRoom" />

    <item
        android:id="@+id/editor_menu_plus"
        android:icon="@drawable/ic_add_circle_white"
        android:title="Plus"
        app:showAsAction="ifRoom" />

    <item
        android:id="@+id/editor_menu_minus"
        android:icon="@drawable/ic_minus_circle_white"
        android:title="Minus"
        app:showAsAction="ifRoom" />


    <item
        android:id="@+id/editor_menu_action_sell"
        android:icon="@drawable/ic_cash_register_white"
        android:title="Sell"
        app:showAsAction="ifRoom" />

    <item
        android:id="@+id/editor_menu_action_order"
        android:icon="@drawable/ic_purchase_order_white"
        android:title="Order"
        app:showAsAction="ifRoom" />

    <item
        android:id="@+id/editor_menu_action_delete"
        android:icon="@drawable/ic_delete_white"
        android:title="Delete"
        app:showAsAction="ifRoom" />


</menu>