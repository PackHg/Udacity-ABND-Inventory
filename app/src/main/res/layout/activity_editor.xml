<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".EditorActivity">

         <!-- Action buttons -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/editor_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/editor_button_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ecommerce_cash_register"
            android:tint="@android:color/white" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/editor_button_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_finance_purchase_order"
            android:tint="@android:color/white"
            app:layout_constraintLeft_toRightOf="@+id/editor_button_sell"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/editor_button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus_circle_black_48dp"
            android:tint="@android:color/white"
            app:layout_constraintLeft_toRightOf="@+id/editor_button_order"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/editor_button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus_circle_black_48dp"
            android:tint="@android:color/white"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/editor_button_plus"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/editor_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_forever_black_48dp"
            android:tint="@android:color/white"
            app:layout_constraintLeft_toRightOf="@+id/editor_button_minus"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />
    </android.support.constraint.ConstraintLayout>

        <!-- Input fields -->
        <!-- Product picture -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/EditorTextViewStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/editor_picture" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/editor_picture"
                    android:layout_width="@dimen/editor_image_width"
                    android:layout_height="@dimen/editor_image_height"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    style="@style/EditorFieldStyle"
                    android:id="@+id/editor_no_picture_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/editor_picture_unvailable" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Product name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/EditorTextViewStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/editor_name" />

            <EditText
                android:id="@+id/editor_name"
                style="@style/EditorFieldStyle"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="@string/editor_product_name"
                android:inputType="textCapWords" />
        </LinearLayout>

        <!-- Product quantity availabe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/EditorTextViewStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/editor_quantity" />

            <EditText
                android:id="@+id/editor_quantity"
                style="@style/EditorFieldStyle"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="@string/editor_quantity_available"
                android:inputType="number" />
        </LinearLayout>

        <!-- Product price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/EditorTextViewStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/editor_price" />

            <EditText
                android:id="@+id/editor_price"
                style="@style/EditorFieldStyle"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="@string/editor_product_price"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Editor Warning for user -->
        <TextView
            android:id="@+id/editor_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/editorWarningTextColor"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginTop="@dimen/activity_margin"
            android:maxLines="6"
            android:scrollbars="vertical"
            tools:text="Warning for user"/>
</LinearLayout>